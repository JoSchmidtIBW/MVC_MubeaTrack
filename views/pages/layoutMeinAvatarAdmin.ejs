    <a>AvatarFarbe: <%=avatarFarbeServer%></a>
    <br>
    <form action="" method="post" class="formAdminHeader">
        <br>
        meine MitarbeiterNummer: <input name="MitarbeiterNummerClientEJS" value="<%= mitarbeiterNummer %>" type="text" readonly="readonly"/>
        <br>
        mein MitarbeiterVorname: <input name="MitarbeiterVornameClientEJS" value="<%= mitarbeiterVorname %>" type="text" />
