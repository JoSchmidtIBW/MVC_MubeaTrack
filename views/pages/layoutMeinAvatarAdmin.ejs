        mein MitarbeiterNachname: <input name="MitarbeiterNachnameClientEJS" value="<%= mitarbeiterNachname %>" type="text" />
        <br>
        meine AvatarFarbe:<select name="MitarbeiterAvatarFarbeSelectClientEJS">
                              <option name="BlauName" value="Blau">"Farbe Blau"</option>
                              <option name="RotName" value="Rot">"Farbe Rot"</option>
                              <option name="GruenName" value="Gruen">"Farbe Grün"</option>
                              <option name="SchwarzName" value="Schwarz">"Farbe Schwarz"</option>
                          </select>
        <br>

    </form>
    <br>
    <br>
    <input type="submit"  value="Speichern"  name="ButtonSpeichernEjs"/>
    <form action="" method="post" class="formAdminHeader">
        <input type="submit"  value="Abrechen"  name="ButtonAbrechenEjs"/>
    </form>
    <br>


    <br>
    <a>Möchtest du dein Passwort ändern?</a>
    <br>
    altest Passwort: <input name="AltesPasswortClientEJS" value="" type="text" />
    <br>
    neues Passwort: <input name="neuesPasswortClientEJS" value="" type="text" />
    <br>
    neues Passwort wiederholen: <input name="neuesPasswortWiederholenClientEJS" value="" type="text" />
    <br>
    <input type="submit"  value="Passwort ändern OK"  name="ButtonPasswortAendernEjs"/>
    <br>
    <br>
            <form action="" method="post" class="formAdminHeader">
                <input type="submit"  value="Zurück zur Verladungserfassung" name="meinAvatarButtonRetourInHomeNameEjs"/>
